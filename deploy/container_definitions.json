[
    {
        "name": "api",
        "image": "008492826001.dkr.ecr.ap-southeast-2.amazonaws.com/api:latest",
        "memory": 512,
        "memoryReservation": 64,
        "essential": true,
        "portMappings": [
            {
                "hostPort": 5000,
                "containerPort": 5000,
                "protocol": "tcp"
            }
        ],
        "environment" : [
            { "name" : "APP_ENV", "value" : "Staging" }
        ],
        "logConfiguration": {
            "logDriver": "syslog",
            "options": {
                "syslog-address": "udp://127.0.0.1:514",
                "tag": "api-staging"
            }
        }
    }
]
